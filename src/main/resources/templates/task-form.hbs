{{#partial "content"}}
    {{#if editTask}}
        <h1>Edit this Task!</h1>
        <form action="/tasks/{{task.id}}" method="post">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-12">
                    <div class="form-group">
                        <label for="description">Edit this task's description</label>
                        <input id="description" name="description" type="text"
                               value="{{task.description}}" class="form-control">
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-12">
                    <div class="form-group">
                        <label for="categoryId">Update this task's category:</label>
                        <select id="categoryId" name="categoryId" class="form-control">
                            {{#each categories}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Update Task</button>
                    </div>
                </div>
            </div>
        </form>
    {{else}}
        <h2>Add Task</h2>
        <form action="/tasks" method="post">
            {{#if categories}}
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label for="description">Task Description</label>
                            <input id="description" name="description"
                                   type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label for="categoryId">Categorize this task as:</label>
                            <select id="categoryId" name="categoryId" class="form-control">
                                {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <p>Don't see the right category?<a href="/categories/new">Add a new one first.</a></p>
            {{else}}
                <h3>
                    You'll need to add a category before you add a task.
                    <a href="/categories/new">Add one here.</a>
                </h3>
            {{/if}}
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Create Task</button>
                    </div>
                </div>
            </div>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}